syntax on
set number
set clipboard+=unnamedplus
set relativenumber
set mouse=a
set smartindent expandtab
set shiftwidth=2 softtabstop=2 tabstop=2
set wildmenu
set undodir=~/.vim/undo-dir
set undofile
filetype plugin on
filetype indent on
set incsearch
set scrolloff=5
"set cursorline
"set termguicolors
set ignorecase
set smartcase
set wrap
let g:netrw_liststyle = 3

"remap key
inoremap jk <esc>

